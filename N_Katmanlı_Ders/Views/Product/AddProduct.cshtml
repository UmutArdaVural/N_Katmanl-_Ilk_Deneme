@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/UıLayaut.cshtml";
}

<br /> <br />
<h1 class="display-1" style="margin-left: 35%;">Ürün Ekle</h1>
<br />
<br />

<form method="Post" >
    <br />

    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x =>x.ProductName, new {@class ="form-control"})
    @Html.ValidationMessageFor(x => x.ProductName)
    <br />     <br />


    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ProductStock)

    <br />     <br />


    @Html.Label("Ürün Fiyat")
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ProductPrice)

    <br />     <br />


    <button type="submit" class="btn btn-success btn-lg">Ürün Ekle </button>

</form>
